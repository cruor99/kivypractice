<DrawingSpace@RelativeLayout>:
    StickMan:
        pos_hint: {'center_x':.5,'center_y':.5}
        canvas.before:
            Translate:
                xy: -self.width/2, -self.height/2
            Scale:
                xyz: 2,2,0
    StickMan:
    Label:
        markup: True
        text: '[size=32px] [color=#3e6643] The [/color] [sub] Comic [/sub] [i] [b]Creator [/b] [/i] [/size]'

